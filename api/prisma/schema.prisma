datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement()) 
  createdAt DateTime @default(now())
  username  String   @unique
  email     String   @unique
  password  String   @db.VarChar(255)
  role      Role     @default(USER)
}

enum Role {
  USER
  ADMIN
}